{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,
    "max-line-length": [true, 120],
    "no-any": true,
    "curly": true,
    "quotemark": [true, "single", "jsx-single"],
    "arrow-parens": true,
    "interface-name": false,
    "object-literal-sort-keys": false,
    "no-shadowed-variable": false,
    "radix": false
  }
}